page {
  background-color: #f2f2f2;
}
.container .top {
  height: 360rpx;
  background-color: #0156c0;
  border-bottom-left-radius: 40rpx;
  padding: 100rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.container .top .inner {
  display: flex;
  align-items: center;
}
.container .top .inner image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.container .top .inner .right {
  display: flex;
  flex-direction: column;
}
.container .top .inner .right text {
  color: #fff;
  font-size: 30rpx;
}
.container .top .inner .right text:nth-of-type(1) {
  font-weight: bold;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
page .top-section {
  width: 100%;
  flex: 1;
  margin-bottom: 20rpx;
}
page .top-section image {
  width: 100%;
  height: 100%;
}
page .options-section {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  margin-top: -100rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}
page .options-section button {
  flex: 1;
  margin: 0 30rpx;
  padding: 60rpx 30rpx;
  background-color: transparent;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  margin-top: -100rpx;
}
page .options-section button:first-child {
  background-color: #00ced1;
}
page .options-section button:last-child {
  background-color: #87ceeb;
}
page .options-section button .options-wen {
  display: flex;
  align-items: center;
  justify-content: center;
}
page .options-section button .options-wen icon {
  margin-right: 10rpx;
}
page .options-section button .options-wen text {
  font-size: 32rpx;
  color: #fff;
}
page .footer {
  flex: 1;
  background-color: #f5f5f5;
  margin-top: -60rpx;
}
